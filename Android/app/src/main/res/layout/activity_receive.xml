<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rootLayer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGray6"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_bar_height"
        android:layout_gravity="top"
        android:background="?android:colorPrimary"
        app:theme="@style/WhiteToolbarStyle">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/font_17_white"
            android:textColor="@color/colorWhite"
            android:text="@string/str_title_my_account"/>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/controlLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/btn_copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/space_54"
                android:background="?android:attr/selectableItemBackground"
                android:textSize="@dimen/text_size_17"
                android:textColor="@color/colorAccent"
                android:text="@string/str_backup_key"
                android:textAllCaps="false"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/space_24"
                        android:layout_height="@dimen/space_24"
                        android:src="@drawable/ic_copy"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_8"
                        android:textSize="@dimen/text_size_17"
                        android:textColor="@color/colorAccent"
                        android:text="@string/str_copy_account"/>
                </LinearLayout>
            </RelativeLayout>
            <Button
                android:id="@+id/btn_Share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:minHeight="@dimen/space_54"
                android:background="@drawable/btn_accent_rect"
                android:textSize="@dimen/text_size_17"
                android:textColor="@color/colorWhite"
                android:text="@string/str_share"
                android:textAllCaps="false"/>
        </LinearLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/mainScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_above="@+id/controlLayout"
            android:overScrollMode="never"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/space_8"
                android:paddingBottom="@dimen/space_24">
                <ImageView
                    android:layout_width="@dimen/space_64"
                    android:layout_height="@dimen/space_64"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space_20"
                    android:src="@drawable/img_account"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space_12"
                    style="@style/font_14_accent"
                    android:text="@string/str_account_name"/>
                <TextView
                    android:id="@+id/accountName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/space_6"
                    style="@style/font_17_black2"
                    tools:text="yellowhammer"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_32"
                    android:layout_marginBottom="@dimen/space_32"
                    android:background="@drawable/white_box"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/accountQr"
                        android:layout_width="@dimen/qr_size"
                        android:layout_height="@dimen/qr_size"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/space_12"
                        android:scaleType="fitXY"/>
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>

</LinearLayout>