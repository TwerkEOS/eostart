<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white_box_ripple"
    android:id="@+id/openSrcRoot">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:paddingTop="@dimen/space_16"
        android:paddingBottom="@dimen/space_16"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="openSrc name"
            android:id="@+id/openSrcNameTvT"
            style="@style/font_15_black2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:text="license name"
            android:id="@+id/lecenseNameTvT"
            style="@style/font_12_gray5"/>
    </LinearLayout>


    <View
        android:id="@+id/openSrcLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray0" />

</LinearLayout>