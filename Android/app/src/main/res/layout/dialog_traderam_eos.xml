<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_26">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            style="@style/font_14_accent_bold"
            android:gravity="center_horizontal"
            android:padding="@dimen/space_8"
            android:text="@string/str_ramtrade_eos"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_12"
            android:layout_marginLeft="@dimen/space_20"
            style="@style/font_14_black2"
            android:text="@string/str_buy_ram_for"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginRight="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_20">
            <TextView
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/buyram_eos"
                style="@style/font_14_black2_bold"
                android:text="EOS"/>
            <EditText
                android:id="@+id/buyram_eos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tag1"
                android:layout_marginRight="@dimen/space_8"
                android:minHeight="@dimen/space_36"
                android:maxLines="1"
                android:textColorHint="@color/colorGray4"
                android:background="@drawable/edittext_correct"
                android:textCursorDrawable="@drawable/primary_cursor"
                style="@style/font_14_black2"
                android:inputType="numberDecimal"/>

            <TextView
                android:id="@+id/buyram_eos_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:layout_below="@+id/buyram_eos"
                android:layout_alignEnd="@id/buyram_eos"
                android:text="~ 23.3431"
                style="@style/font_12_red"/>
        </RelativeLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_18"
            android:layout_marginLeft="@dimen/space_20"
            style="@style/font_14_black2"
            android:text="@string/str_sell_ram_for"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginRight="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_20">
            <TextView
                android:id="@+id/tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/buyram_kb"
                style="@style/font_14_black2_bold"
                android:text="EOS"/>
            <EditText
                android:id="@+id/buyram_kb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tag2"
                android:layout_marginRight="@dimen/space_12"
                android:minHeight="@dimen/space_36"
                android:maxLines="1"
                android:textColorHint="@color/colorGray4"
                android:background="@drawable/edittext_correct"
                android:textCursorDrawable="@drawable/primary_cursor"
                style="@style/font_14_black2"
                android:inputType="numberDecimal"/>
            <TextView
                android:id="@+id/buyram_kb_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                android:layout_below="@+id/buyram_kb"
                android:layout_alignEnd="@id/buyram_kb"
                android:text="~ 23.3431"
                style="@style/font_12_red"/>
        </RelativeLayout>

        <Button
            android:id="@+id/singleOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_24"
            android:background="@drawable/btn_gray6_round_rect"
            style="@style/font_17_accent"
            android:textAllCaps="false"
            android:text="@string/str_ok"/>

    </LinearLayout>
</LinearLayout>