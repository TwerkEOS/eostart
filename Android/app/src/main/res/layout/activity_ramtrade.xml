<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGray6"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_bar_height"
        android:layout_gravity="top"
        android:background="?android:colorPrimary"
        app:theme="@style/WhiteToolbarStyle">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/font_17_white"
            android:textColor="@color/colorWhite"
            android:text="@string/str_title_ram"/>
    </android.support.v7.widget.Toolbar>

    <!--<android.support.v4.widget.SwipeRefreshLayout-->
        <!--android:id="@+id/swipeRefreshLayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/ramTrade_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_24"
            android:layout_marginBottom="@dimen/space_8"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_gray_box"
            style="@style/font_12_red"
            tools:text="0.01632 EOS / KB"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/ramTrade_rate"
            android:layout_above="@+id/btn_confirm">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RelativeLayout
                    android:id="@+id/progressEosLayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="@dimen/space_24"
                    android:paddingBottom="@dimen/space_24">
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/seekbar_marking"
                        android:layout_marginTop="@dimen/space_16"
                        android:layout_marginBottom="@dimen/space_16">
                    </RelativeLayout>
                    <wannabit.io.eoswallet.view.VerticalSeekBar
                        android:id="@+id/eos_seekbar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/space_12"
                        android:maxHeight="4dp"
                        android:splitTrack="false"
                        android:progress="0"
                        android:max="1000"
                        android:progressDrawable="@drawable/eos_seekbar_style"
                        android:thumb="@drawable/eos_seekbar_thumb"/>
                </RelativeLayout>
                <android.support.v7.widget.CardView
                    android:id="@+id/cardEos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/progressEosLayer"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardElevation="@dimen/space_8"
                    app:cardPreventCornerOverlap="true"
                    app:cardCornerRadius="@dimen/space_6">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/space_48"
                            android:gravity="center"
                            android:background="@color/colorPrimary">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/font_18_white_bold"
                                android:text="EOS"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                            android:paddingLeft="@dimen/space_12"
                            android:paddingRight="@dimen/space_12"
                            android:paddingTop="@dimen/space_18"
                            android:paddingBottom="@dimen/space_18"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/eosBeforeAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/space_2"
                                style="@style/font_12_gray3"
                                tools:text="321.3433"/>
                            <TextView
                                android:id="@+id/eosChangeAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/space_2"
                                android:layout_marginTop="@dimen/space_6"
                                style="@style/font_12_gray3"
                                tools:text="- 121.3451"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginTop="@dimen/space_8"
                                android:background="@color/colorGray3"/>

                            <TextView
                                android:id="@+id/eosResultAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/space_2"
                                android:layout_marginTop="@dimen/space_10"
                                style="@style/font_14_black2_bold"
                                tools:text="100.3411"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="35dp">
                <TextView
                    android:id="@+id/grade100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:maxLines="1"
                    android:textSize="8sp"
                    android:textColor="@color/colorGray8"
                    android:text="100%"/>

                <TextView
                    android:id="@+id/grade75"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/grade100"
                    android:layout_above="@+id/grade150"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:textColor="@color/colorGray8"
                    android:text="75%"/>

                <TextView
                    android:id="@+id/grade150"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="8sp"
                    android:textColor="@color/colorGray8"
                    android:text="50%"/>

                <TextView
                    android:id="@+id/grade25"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/grade150"
                    android:layout_above="@+id/grade0"
                    android:maxLines="1"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:textColor="@color/colorGray8"
                    android:text="25%"/>

                <TextView
                    android:id="@+id/grade0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:maxLines="1"
                    android:textSize="8sp"
                    android:textColor="@color/colorGray8"
                    android:text="0%"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <RelativeLayout
                    android:id="@+id/progressRamLayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/space_24"
                    android:paddingBottom="@dimen/space_24">
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/seekbar_marking"
                        android:layout_marginTop="@dimen/space_16"
                        android:layout_marginBottom="@dimen/space_16">
                    </RelativeLayout>
                    <wannabit.io.eoswallet.view.VerticalSeekBar
                        android:id="@+id/ram_seekbar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/space_3"
                        android:maxHeight="4dp"
                        android:splitTrack="false"
                        android:progress="0"
                        android:max="1000"
                        android:progressDrawable="@drawable/ram_seekbar_style"
                        android:thumb="@drawable/ram_seekbar_thumb"/>
                </RelativeLayout>
                <android.support.v7.widget.CardView
                    android:id="@+id/cardRam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/progressRamLayer"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_20"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardElevation="@dimen/space_8"
                    app:cardPreventCornerOverlap="true"
                    app:cardCornerRadius="@dimen/space_6">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/space_48"
                            android:gravity="center"
                            android:background="@color/colorRam">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/font_18_white_bold"
                                android:text="RAM"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@color/colorWhite"
                                android:paddingLeft="@dimen/space_12"
                                android:paddingRight="@dimen/space_12"
                                android:paddingTop="@dimen/space_18"
                                android:paddingBottom="@dimen/space_18"
                                android:gravity="right">
                                <TextView
                                    android:id="@+id/ramBeforeAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/space_2"
                                    style="@style/font_12_gray3"
                                    tools:text="14.34"/>
                                <TextView
                                    android:id="@+id/ramChangeAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/space_2"
                                    android:layout_marginTop="@dimen/space_6"
                                    style="@style/font_12_gray3"
                                    tools:text="+ 34.21"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="1px"
                                    android:layout_marginTop="@dimen/space_8"
                                    android:background="@color/colorGray3"/>
                                <TextView
                                    android:id="@+id/ramResultAmount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/space_2"
                                    android:layout_marginTop="@dimen/space_10"
                                    style="@style/font_14_black2_bold"
                                    tools:text="48.64"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/space_8"
                                android:layout_marginTop="@dimen/space_8"
                                style="@style/font_11_ram"
                                android:text="KB"/>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/space_24"
            android:minHeight="@dimen/space_54"
            android:background="@drawable/btn_accent_rect"
            android:textSize="@dimen/text_size_17"
            android:textColor="@color/color_text_accent_btn"
            android:text="@string/str_confirm"
            android:elevation="@dimen/space_12"
            android:textAllCaps="false"
            android:enabled="false"/>
    </RelativeLayout>
    <!--</android.support.v4.widget.SwipeRefreshLayout>-->
</LinearLayout>


