                            android:layout_marginRight="@dimen/space_10"
                            android:layout_marginTop="@dimen/space_15"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_st_languageic" />
                        <TextView
                            android:id="@+id/languageTvT"
                            style="@style/font_17_black2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/languageIc"
                            android:text="@string/str_language" />
                        <TextView
                            android:id="@+id/languageTv"
                            style="@style/font_15_gray5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_10"
                            android:layout_toLeftOf="@+id/languageArrow"/>
                        <ImageView
                            android:id="@+id/languageArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_20"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_arrow_to_right" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorGray0" />



                    <TextView
                        style="@style/font_12_gray5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_20"
                        android:layout_marginTop="@dimen/space_20"
                        android:text="@string/str_service_security" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/space_8"
                        android:background="@color/colorGray0" />

                    <RelativeLayout
                        android:id="@+id/set_appLock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:clickable="true">
                        <ImageView
                            android:id="@+id/appLockIc"
                            android:layout_width="@dimen/space_24"
                            android:layout_height="@dimen/space_24"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/space_16"
                            android:layout_marginLeft="@dimen/space_20"
                            android:layout_marginRight="@dimen/space_10"
                            android:layout_marginTop="@dimen/space_15"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_st_lock" />
                        <TextView
                            android:id="@+id/appLockTvT"
                            style="@style/font_17_black2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/appLockIc"
                            android:text="@string/str_service_applock" />
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/switchAppLock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_20"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_arrow_to_right" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_below="@+id/appLockIc"
                            android:layout_marginLeft="@dimen/space_16"
                            android:background="@color/colorGray0" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/set_fingerprint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:clickable="true">
                        <ImageView
                            android:id="@+id/fingerprintIc"
                            android:layout_width="@dimen/space_24"
                            android:layout_height="@dimen/space_24"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/space_16"
                            android:layout_marginLeft="@dimen/space_20"
                            android:layout_marginRight="@dimen/space_10"
                            android:layout_marginTop="@dimen/space_15"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_st_fingerprint" />
                        <TextView
                            android:id="@+id/fingerprintTvT"
                            style="@style/font_17_black2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/fingerprintIc"
                            android:text="@string/str_service_finger" />
                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/switchFingerprint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_20"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_arrow_to_right" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorGray0" />



                    <TextView
                        style="@style/font_12_gray5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_20"
                        android:layout_marginTop="@dimen/space_20"
                        android:text="@string/str_aboutus" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/space_8"
                        android:background="@color/colorGray0" />

                    <RelativeLayout
                        android:id="@+id/set_hamepage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_box_ripple"
                        android:clickable="true">

                        <ImageView
                            android:id="@+id/homepageIc"
                            android:layout_width="@dimen/space_24"
                            android:layout_height="@dimen/space_24"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/space_16"
                            android:layout_marginLeft="@dimen/space_20"
                            android:layout_marginRight="@dimen/space_10"
                            android:layout_marginTop="@dimen/space_15"
                            android:scaleType="fitXY"
                            android:src="@drawable/home_ic" />
                        <TextView
                            style="@style/font_17_black2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/homepageIc"
                            android:text="@string/str_homepage" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_20"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_arrow_to_right" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_below="@+id/homepageIc"
                            android:layout_marginLeft="@dimen/space_16"
                            android:background="@color/colorGray0" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/set_tellegram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_box_ripple"
                        android:clickable="true">
                        <ImageView
                            android:id="@+id/tellegramIc"
                            android:layout_width="@dimen/space_24"
                            android:layout_height="@dimen/space_24"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/space_16"
                            android:layout_marginLeft="@dimen/space_20"
                            android:layout_marginRight="@dimen/space_10"
                            android:layout_marginTop="@dimen/space_15"
                            android:scaleType="fitXY"
                            android:src="@drawable/st_telegram" />
                        <TextView
                            style="@style/font_17_black2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tellegramIc"
                            android:text="@string/str_service_telegram" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_20"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_arrow_to_right" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorGray0" />



                    <TextView
                        style="@style/font_12_gray5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_20"
                        android:layout_marginTop="@dimen/space_20"
                        android:text="@string/str_terms" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/space_8"
                        android:background="@color/colorGray0" />



                    <RelativeLayout
                        android:id="@+id/set_github"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_box_ripple"
                        android:clickable="true">
                        <ImageView
                            android:id="@+id/githubIc"
                            android:layout_width="@dimen/space_24"
                            android:layout_height="@dimen/space_24"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/space_16"
                            android:layout_marginLeft="@dimen/space_20"
                            android:layout_marginRight="@dimen/space_10"
                            android:layout_marginTop="@dimen/space_15"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_st_github" />
                        <TextView
                            android:id="@+id/githubTvT"
                            style="@style/font_17_black2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/githubIc"
                            android:text="@string/str_service_github" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_20"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_arrow_to_right" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_below="@+id/githubIc"
                            android:layout_marginLeft="@dimen/space_16"
                            android:background="@color/colorGray0" />
                    </RelativeLayout>



                    <RelativeLayout
                        android:id="@+id/set_openSrc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_box_ripple"
                        android:clickable="true">
                        <ImageView
                            android:id="@+id/openSrcIc"
                            android:layout_width="@dimen/space_24"
                            android:layout_height="@dimen/space_24"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/space_16"
                            android:layout_marginLeft="@dimen/space_20"
                            android:layout_marginRight="@dimen/space_10"
                            android:layout_marginTop="@dimen/space_15"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_st_lisense" />
                        <TextView
                            android:id="@+id/openSrcTvT"
                            style="@style/font_17_black2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/openSrcIc"
                            android:text="@string/str_service_licenses" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_20"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_arrow_to_right" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_below="@+id/openSrcIc"
                            android:layout_marginLeft="@dimen/space_16"
                            android:background="@color/colorGray0" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/set_terms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_box_ripple"
                        android:clickable="true">
                        <ImageView
                            android:id="@+id/termsIc"
                            android:layout_width="@dimen/space_24"
                            android:layout_height="@dimen/space_24"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/space_16"
                            android:layout_marginLeft="@dimen/space_20"
                            android:layout_marginRight="@dimen/space_10"
                            android:layout_marginTop="@dimen/space_15"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_st_agreement" />
                        <TextView
                            android:id="@+id/termsTvT"
                            style="@style/font_17_black2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/termsIc"
                            android:text="@string/str_service_terms" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_20"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_arrow_to_right" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginBottom="@dimen/space_32"
                        android:background="@color/colorGray0" />



                    <LinearLayout
                        android:id="@+id/set_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/space_24"
                        android:layout_marginTop="@dimen/space_18"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/wannabit_logo"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:id="@+id/set_version"
                            style="@style/font_12_gray5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            tools:text="v 1.0.0"/>

                    </LinearLayout>


                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </RelativeLayout>



    </android.support.constraint.ConstraintLayout>
</layout>