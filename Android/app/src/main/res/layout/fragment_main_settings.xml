<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/rootLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <TextView
                        style="@style/font_12_gray5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_20"
                        android:layout_marginTop="@dimen/space_20"
                        android:text="@string/str_service_set" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/space_8"
                        android:background="@color/colorGray0" />

                    <RelativeLayout
                        android:id="@+id/set_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_box_ripple"
                        android:clickable="true">
                        <ImageView
                            android:id="@+id/accountIc"
                            android:layout_width="@dimen/space_24"
                            android:layout_height="@dimen/space_24"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/space_16"
                            android:layout_marginLeft="@dimen/space_20"
                            android:layout_marginRight="@dimen/space_10"
                            android:layout_marginTop="@dimen/space_15"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_st_accountsic" />
                        <TextView
                            android:id="@+id/accountTvT"
                            style="@style/font_17_black2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/accountIc"
                            android:text="@string/str_accounts" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_20"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_arrow_to_right" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_below="@+id/accountIc"
                            android:layout_marginLeft="@dimen/space_16"
                            android:background="@color/colorGray0" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/set_currency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_box_ripple"
                        android:clickable="true">
                        <ImageView
                            android:id="@+id/currencyIc"
                            android:layout_width="@dimen/space_24"
                            android:layout_height="@dimen/space_24"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/space_16"
                            android:layout_marginLeft="@dimen/space_20"
                            android:layout_marginRight="@dimen/space_10"
                            android:layout_marginTop="@dimen/space_15"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_st_currencyic" />
                        <TextView
                            android:id="@+id/currencyTvT"
                            style="@style/font_17_black2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/currencyIc"
                            android:text="@string/str_currency" />
                        <TextView
                            android:id="@+id/currencyTv"
                            style="@style/font_15_gray5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_10"
                            android:layout_toLeftOf="@+id/currenyArrow"/>
                        <ImageView
                            android:id="@+id/currenyArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_20"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_arrow_to_right" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_below="@+id/currencyIc"
                            android:layout_marginLeft="@dimen/space_16"
                            android:background="@color/colorGray0" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/set_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_box_ripple"
