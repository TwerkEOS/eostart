<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_26">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            style="@style/font_14_accent_bold"
            android:gravity="center_horizontal"
            android:padding="@dimen/space_8"
            android:text="@string/str_service_applock"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginRight="@dimen/space_24"
            android:layout_marginLeft="@dimen/space_24"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_st_fingerprint"/>
            <TextView
                android:id="@+id/fingerMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_8"
                style="@style/font_14_black2"
                android:gravity="center"
                android:text="@string/str_request_finger_swipe"/>
        </LinearLayout>

        <TextView
            android:id="@+id/fingerHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginRight="@dimen/space_24"
            android:layout_marginLeft="@dimen/space_24"
            style="@style/font_12_red"
            android:gravity="center"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_24"
            android:orientation="horizontal">
            <Button
                android:id="@+id/singleOK"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_gray6_round_rect"
                style="@style/font_17_accent"
                android:textAllCaps="false"
                android:text="@string/str_cancel"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>