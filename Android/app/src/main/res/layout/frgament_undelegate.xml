<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray6">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:layout_marginTop="@dimen/space_24">
            <LinearLayout
                android:id="@+id/undelegateDummy"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="0px"
                android:layout_height="0px"
                android:orientation="vertical"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/undelegateCpuAvailable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_12_blue"
                    android:text="Ava : 3.8373 EOS"/>

                <TextView
                    android:id="@+id/undelegateCpuTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    style="@style/font_12_blue"
                    android:text="CPU : 3.8373 EOS"/>
            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8">
                <EditText
                    android:id="@+id/undelegateCpuAmount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_50"
                    android:hint="@string/str_amount"
                    android:textColorHint="@color/colorGray4"
                    android:background="@drawable/edittext_correct"
                    android:textCursorDrawable="@drawable/primary_cursor"
                    android:paddingEnd="@dimen/space_58"
                    style="@style/font_15_black2"
                    android:inputType="numberDecimal"
                    android:nextFocusUp="@id/delegateAmount"
                    android:nextFocusLeft="@id/delegateAmount"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/space_8"
                    android:padding="@dimen/space_4"
                    android:layout_centerVertical="true"
                    style="@style/font_15_gray3"
                    android:text="EOS"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/undelegateCpu_amount_0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="@dimen/space_36"
                    android:background="@drawable/btn_amount_rect"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/colorWhite"
                    android:text="@string/str_amount_10p"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/undelegateCpu_amount_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_4"
                    android:minHeight="@dimen/space_36"
                    android:background="@drawable/btn_amount_rect"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/colorWhite"
                    android:text="@string/str_amount_30p"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/undelegateCpu_amount_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_4"
                    android:minHeight="@dimen/space_36"
                    android:background="@drawable/btn_amount_rect"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/colorWhite"
                    android:text="@string/str_amount_50p"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/undelegateCpu_amount_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_4"
                    android:minHeight="@dimen/space_36"
                    android:background="@drawable/btn_amount_rect"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/colorWhite"
                    android:text="@string/str_amount_70p"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/undelegateCpu_amount_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_4"
                    android:minHeight="@dimen/space_36"
                    android:background="@drawable/btn_primary_rect"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/colorWhite"
                    android:text="@string/str_amount_100p"
                    android:textAllCaps="false"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_32">
                <TextView
                    android:id="@+id/undelegateNetAvailable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_12_blue"
                    android:text="Ava : 3.8373 EOS"/>

                <TextView
                    android:id="@+id/undelegateNetTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    style="@style/font_12_blue"
                    android:text="CPU : 3.8373 EOS"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8">
                <EditText
                    android:id="@+id/undelegateNetAmount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_50"
                    android:hint="@string/str_amount"
                    android:textColorHint="@color/colorGray4"
                    android:background="@drawable/edittext_correct"
                    android:textCursorDrawable="@drawable/primary_cursor"
                    android:paddingEnd="@dimen/space_58"
                    style="@style/font_15_black2"
                    android:inputType="numberDecimal"
                    android:nextFocusUp="@id/delegateAmount"
                    android:nextFocusLeft="@id/delegateAmount"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/space_8"
                    android:padding="@dimen/space_4"
                    android:layout_centerVertical="true"
                    style="@style/font_15_gray3"
                    android:text="EOS"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/undelegateNet_amount_0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="@dimen/space_36"
                    android:background="@drawable/btn_amount_rect"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/colorWhite"
                    android:text="@string/str_amount_10p"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/undelegateNet_amount_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_4"
                    android:minHeight="@dimen/space_36"
                    android:background="@drawable/btn_amount_rect"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/colorWhite"
                    android:text="@string/str_amount_30p"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/undelegateNet_amount_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_4"
                    android:minHeight="@dimen/space_36"
                    android:background="@drawable/btn_amount_rect"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/colorWhite"
                    android:text="@string/str_amount_50p"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/undelegateNet_amount_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_4"
                    android:minHeight="@dimen/space_36"
                    android:background="@drawable/btn_amount_rect"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/colorWhite"
                    android:text="@string/str_amount_70p"
                    android:textAllCaps="false"/>
                <Button
                    android:id="@+id/undelegateNet_amount_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/space_4"
                    android:minHeight="@dimen/space_36"
                    android:background="@drawable/btn_primary_rect"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/colorWhite"
                    android:text="@string/str_amount_100p"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>.


    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/space_24"
        android:minHeight="@dimen/space_54"
        android:background="@drawable/btn_accent_rect"
        android:textSize="@dimen/text_size_17"
        android:textColor="@color/color_text_accent_btn"
        android:text="@string/str_confirm"
        android:elevation="@dimen/space_12"
        android:textAllCaps="false"
        android:enabled="false"/>
</RelativeLayout>